<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_column="1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:isScrollContainer="false"
            app:layout_constraintBottom_toTopOf="@+id/transactionBar"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/transactionBar"
                android:gravity="center|bottom"
                android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="20dp"
                android:text="Ripple"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="$225.22"
                android:textColor="#E53E3E"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/tradeGraph"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Statistics"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Opening Price"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="$234.56"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="High Day"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/high"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="$212.78"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Low Day"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="$205.13 - $233.76"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Market Cap"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/mktCap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$165.47 - $251.11"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Supply"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/supply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="903,811"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Crypto Volume"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tVol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="1,107,715"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="USD Volume"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/fVol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="0.00 x 800"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Percent Change"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/pctChng24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="0.00 x 950"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="Price Change"
                        android:textAlignment="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/chng24hr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="4.83%"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/transactionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        app:layout_constraintBottom_toTopOf="@id/navBar">
        <Button
            android:id="@+id/buy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Buy"/>

        <EditText
            android:id="@+id/etQuantity"
            android:hint="#"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/buy"
            android:textAlignment="center"/>

        <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/sell"
                android:text="Sell"
                app:layout_constraintLeft_toRightOf="@+id/etQuantity"
                app:layout_constraintBottom_toTopOf="@+id/navBar"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_home" />
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search"
            app:layout_constraintLeft_toRightOf="@+id/homeBtn"
            app:layout_constraintStart_toEndOf="@+id/homeBtn" />
        <Button
            android:id="@+id/settingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            app:layout_constraintLeft_toRightOf="@+id/searchBtn"
            app:layout_constraintStart_toEndOf="@+id/searchBtn" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>